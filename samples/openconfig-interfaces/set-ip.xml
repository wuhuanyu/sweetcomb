<!-- XML for edit-config RPC to set an IP using openconfig-interfaces -->
<interfaces xmlns="http://openconfig.net/yang/interfaces">
    <interface>
        <config>
            <description>openconfig</description>
            <enabled>true</enabled>
            <loopback-mode>true</loopback-mode>
            <mtu>1501</mtu>
            <name>tap0</name>
            <type xmlns:ianaift="urn:ietf:params:xml:ns:yang:iana-if-type">ianaift:ethernetCsmacd
            </type>
        </config>
        <name>tap0</name>
        <subinterfaces>
            <subinterface>
                <config>
                    <description>openconfig</description>
                    <enabled>true</enabled>
                    <index>0</index>
                </config>
                <index>0</index>
                <ipv4 xmlns="http://openconfig.net/yang/interfaces/ip">
                    <addresses>
                        <address>
                            <config>
                                <ip>192.168.0.2</ip>
                                <prefix-length>24</prefix-length>
                            </config>
                            <ip>192.168.0.2</ip>
                        </address>
                    </addresses>
                </ipv4>
            </subinterface>
        </subinterfaces>
    </interface>
</interfaces>

